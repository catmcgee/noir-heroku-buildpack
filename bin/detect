#!/bin/sh
# fail fast
set -e

# check for Nargo.toml file
if [ -f Nargo.toml ]; then
  echo "rust-noir"
  exit 0
fi

# check for 'nargo' command in main.rs file
if [ -f main.rs ] && grep -q 'nargo' main.rs; then
  echo "rust-noir"
  exit 0
fi

echo "No Nargo.toml file or 'nargo' command found" >&2
exit 1
